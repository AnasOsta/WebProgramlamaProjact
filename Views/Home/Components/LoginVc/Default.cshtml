@model v6.Models.Login

@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

<div class="portfolio-modal modal fade" id="Login" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="container">
                <div class="close-modal" data-bs-dismiss="modal"></div>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="modal-body">
                            <!-- Project details-->
                            <h1 class="text-uppercase">ْ@Localizer["Login"]</h1>
                            <hr />
                            <div class="row">
                                <div>
                                    <form asp-action="Login">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="KullaniciAd" class="control-label"></label>
                                            <input asp-for="KullaniciAd" class="form-control" />
                                            <span asp-validation-for="KullaniciAd" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="sifre" class="control-label"></label>
                                            <input asp-for="sifre" class="form-control" />
                                            <span asp-validation-for="sifre" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="@Localizer["Login"]" class="btn btn-primary text-uppercase btn-xl" />
                                        </div>
                                    </form>
                                    <partial name="~/Views/Home/partial/close/_close.cshtml" />
                                </div>
                            </div>
                            `
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
