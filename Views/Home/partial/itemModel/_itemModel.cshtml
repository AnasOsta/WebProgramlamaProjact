@{ var aa = ViewBag.Data as List<Content>;}
@foreach (var item in aa)
{
    <div class="portfolio-modal modal fade" id="@("portfolio" + item.ContentID)" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-bs-dismiss="modal"><img src="assets/img/close-icon.svg" alt="Close modal" /></div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="modal-body">
                                <!-- Project details-->
                                <h2 class="text-uppercase">@item.adi</h2>
                                <p class="item-intro text-muted">@item.balslik</p>
                                <img class="img-fluid d-block mx-auto" src="@item.imageUrl" alt="..." />
                                <p>@item.content</p>
                                <ul class="list-inline">
                                    <li>
                                        <strong>User Name :</strong>
                                        @item.Kullanici.KullaniciAd
                                    </li>
                                    <li>
                                        <strong>Type:</strong>
                                        @item.tur
                                    </li>
                                </ul>
                                <partial name="~/Views/Home/partial/close/_close.cshtml" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}